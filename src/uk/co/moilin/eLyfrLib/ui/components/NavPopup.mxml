<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" 
						   xmlns:mx="library://ns.adobe.com/flex/mx">
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		#homeButton,#replayButton {
			chromeColor: #FF0000;
			cornerRadius: 10;
			focusColor: #00FF00;
		}
	</fx:Style>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:HGroup x="0" y="0" width="100%" height="100%"
			  gap="20" paddingTop="20" paddingRight="20" paddingBottom="20" paddingLeft="20"
			  horizontalAlign="center" verticalAlign="middle">
		<s:Button id="homeButton" width="100" height="100" label="HOME"/>
		<s:Button id="replayButton" width="100" height="100" label="REPLAY"/>
	</s:HGroup>
</s:SkinnablePopUpContainer>
