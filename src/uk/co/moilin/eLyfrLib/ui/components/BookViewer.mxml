<?xml version="1.0" encoding="utf-8"?>
<components:Viewer xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:ui="uk.co.moilin.eLyfrLib.ui.*"
		 xmlns:components="uk.co.moilin.eLyfrLib.ui.components.*">
	<components:PageList id="pageViewer"
						 verticalScrollPolicy="off" pageScrollingEnabled="true"
						 selectionColor="#ffffff"
						 itemRenderer="uk.co.moilin.eLyfrLib.ui.components.PageItemRenderer">
		<components:layout>
			<s:HorizontalLayout gap="0" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0"/>
		</components:layout>
	</components:PageList>
	
	
	<s:Group id="prevButton" width="100" height="100%" left="0" verticalCenter="0">
		<s:Button skinClass="uk.co.moilin.eLyfrLib.skins.PrevButton"
				  left="0" verticalCenter="0" />
	</s:Group>
	<s:Group id="nextButton" width="100" height="100%" right="0" verticalCenter="0">
		<s:Button skinClass="uk.co.moilin.eLyfrLib.skins.NextButton" 
				  right="0" verticalCenter="0" />
	</s:Group>
</components:Viewer>
